 <h1>Books</h1>
 <table>
   <thead>
    <tr>
     <th>Title</th>
     <th>Body</th>
     <th colspan = "3"></th>
    </tr>
    <tbody>
       <tr>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <td><%= link_to "Show" %></td>
          <td><%= link_to "Edit" %></td>
          <td><%= link_to "Destroy" %></td>
       </tr>
    </tbody>
   </thead>
 </table>
 <h2>New book</h2>
 <%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'create Book' %>

<% end %>
